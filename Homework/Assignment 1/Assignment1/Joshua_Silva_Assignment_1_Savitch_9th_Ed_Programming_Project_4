#include <iostream>

using namespace std;

int main()
{
    int Sec, Dist;
    
    cout << "Press Enter After Inputing Number\n";
    cout << "Enter Number of Seconds\n";
    cin >> Sec;
    Dist= 32*(Sec*Sec)/2;
    cout << "If an object falls for ";
    cout << Sec;
    cout << " seconds,\n";
    cout << "the object would have fallen\n";
    cout << Dist;
    cout << " feet.";
    
    return 0;
}

